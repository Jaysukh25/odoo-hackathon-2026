root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 4

[.blade.php]
indent_size = 4

[{package.json,.babelrc,.eslintrc,.stylelintrc}]
indent_size = 2
